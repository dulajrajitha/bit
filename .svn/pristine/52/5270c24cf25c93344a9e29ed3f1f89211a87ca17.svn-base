private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed

    try{
        CustomerDto customerDto = new CustomerDto();
        
        customerDto.setCode(this.code);
        customerDto.setName(name.getText());
        customerDto.setOtherName(otherName.getText());
        customerDto.setPobox(poBox.getText());
        customerDto.setStreet(street.getText());
        customerDto.setCity(city.getText());
        customerDto.setTel(telephone.getText());        
        customerDto.setMobile(mobile.getText());
        customerDto.setFax(fax.getText());
        customerDto.setEmail(email.getText());        
        customerDto.setType(type.getSelectedItem().toString());
        customerDto.setOther(other.getText());
        
        SaveCustomerController controller = new SaveCustomerController();
        
        controller.saveCustomer(customerDto);
    }catch(Exception e){
        System.out.print("okkkkkkkkk"+e);
    }    
    
}//GEN-LAST:event_jButton3ActionPerformed


