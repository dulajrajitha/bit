    private void saveBtnActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_saveBtnActionPerformed
        TimsUser timsUser = new TimsUser();
        timsUser.setUserName(this.userName.getText());
        char password[] = this.password.getPassword();
        timsUser.setPassword(new String(password));
        int st = this.status.isSelected() ? 1 : 0;
        timsUser.setStatus(st);
        new AddUserController(timsUser, this.ctr);
    }//GEN-LAST:event_saveBtnActionPerformed

